<header id="header"class="header">
    {% if article.thumb is defined %}
        <div class="header-banner"style="background-image: url({{article.thumb}});">
            <h1>{{ controller_name }}</h1>
        </div>
    {% else %}
        <div class="header-banner">
            <h1>{{ controller_name }}</h1>
            <div id="mySidenav" class="sidenav">
