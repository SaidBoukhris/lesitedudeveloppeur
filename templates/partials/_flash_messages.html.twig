{% for type,messages in app.flashes %}
    {% for message in messages %}
        {% if type == 'error' %}
            <div id="alert" class="alert alert-error" role="alert">{{ message }}</div>
        {% elseif type == 'success' %}
            <div id="alert" class="alert alert-success" role="alert">{{ message }}</div>
        {% elseif type == 'info' %}
            <div id="alert" class="alert alert-info" role="alert">{{ message }}</div>
        {% endif %}
    {% endfor %}
{% endfor %}